@model IEnumerable<Riaad_EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Venue</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" alt="Venue Image" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VenueID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
