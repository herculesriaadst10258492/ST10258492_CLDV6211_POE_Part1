@model IEnumerable<Riaad_EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Event Date</th>
            <th>Description</th>
            <th>Venue</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Description</td>
                <td>@item.Venue?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
