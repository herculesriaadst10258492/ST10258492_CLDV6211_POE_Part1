@model Riaad_EventEase.Models.AppEvent

@{
    ViewData["Title"] = "Delete AppEvent";
}

<h1>Delete AppEvent</h1>
<hr />
<h4>Are you sure you want to delete this?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.EventName</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.EventDescription</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.EventDate.ToString("f")</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="EventID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
