@model Riaad_EventEase.Models.AppEvent

@{
    ViewData["Title"] = "AppEvent Details";
}

<h1>AppEvent Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.EventName</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.EventDescription</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.EventDate.ToString("f")</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.EventID" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
