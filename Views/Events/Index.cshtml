@model IEnumerable<Riaad_EventEase.Models.AppEvent>
@{
    ViewData["Title"] = "Events";
}
<h1>Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New AppEvent</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>VenueID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDescription</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.VenueID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
