@model Riaad_EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>
<hr />
<h4>Are you sure you want to delete this?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.VenueName</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Capacity</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>

    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">
        <img src="@Model.ImageURL" alt="Venue Image" class="img-fluid" />
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VenueID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
