@model Riaad_EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" type="date" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventID" class="control-label">Select Event</label>
                <select asp-for="EventID" class="form-control" asp-items="ViewBag.EventID">
                    <option value="">-- Select an Event --</option>
                </select>
                <span asp-validation-for="EventID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueID" class="control-label">Select Venue</label>
                <select asp-for="VenueID" class="form-control" asp-items="ViewBag.VenueID">
                    <option value="">-- Select a Venue --</option>
                </select>
                <span asp-validation-for="VenueID" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
